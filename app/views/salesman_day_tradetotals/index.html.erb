<h1>Listing Salesman Day Tradetotals</h1>

<table>
  <thead>
    <tr>
      <th>Trade date</th>
      <th>Total amount</th>
      <th>Total count</th>
      <th>Wechat amount</th>
      <th>Wechat count</th>
      <th>Alipay amount</th>
      <th>Alipay count</th>
      <th>T0 amount</th>
      <th>T0 count</th>
      <th>T1 amount</th>
      <th>T1 count</th>
      <th>Expected amount</th>
      <th>Actual amount</th>
      <th>Diff amount</th>
      <th>Diff total amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @salesman_day_tradetotals.each do |salesman_day_tradetotal| %>
      <tr>
        <td><%= salesman_day_tradetotal.trade_date %></td>
        <td><%= salesman_day_tradetotal.total_amount %></td>
        <td><%= salesman_day_tradetotal.total_count %></td>
        <td><%= salesman_day_tradetotal.wechat_amount %></td>
        <td><%= salesman_day_tradetotal.wechat_count %></td>
        <td><%= salesman_day_tradetotal.alipay_amount %></td>
        <td><%= salesman_day_tradetotal.alipay_count %></td>
        <td><%= salesman_day_tradetotal.t0_amount %></td>
        <td><%= salesman_day_tradetotal.t0_count %></td>
        <td><%= salesman_day_tradetotal.t1_amount %></td>
        <td><%= salesman_day_tradetotal.t1_count %></td>
        <td><%= salesman_day_tradetotal.expected_amount %></td>
        <td><%= salesman_day_tradetotal.actual_amount %></td>
        <td><%= salesman_day_tradetotal.diff_amount %></td>
        <td><%= salesman_day_tradetotal.diff_total_amount %></td>
        <td><%= link_to 'Show', salesman_day_tradetotal %></td>
        <td><%= link_to 'Edit', edit_salesman_day_tradetotal_path(salesman_day_tradetotal) %></td>
        <td><%= link_to 'Destroy', salesman_day_tradetotal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

