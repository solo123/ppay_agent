      tr
        td= r["idx"]
        td= r["shop_name"]
        td= r["contact_name"]
        th= r["contact_tel"]
        td= r["location"]
        td= link_to(r["salesman.name"], salesman_path(r["salesman.url"]) )
        td= r["qudao"]
        td= r['join_date']
        th= r["rate"]
        td= r["total_amount"]
        td= r["wechat_amount"]
        td= r["wechat_count"]
        td= r["alipay_amount"]
        td= r["t0_amount"]
